<div class="slider-container custom-container">
    <div class="slider-wrapper custom-wrapper">
        {% for block in section.blocks %}
            <div class="custom-slider-item swiper-slide {% if forloop.first %} main-item {% else %} small-item {% endif %}">
                <img src="{{ block.settings.image | img_url: 'master' }}" alt="Slider Image">
                <p class="caption">{{ block.settings.slider_captions }}</p>
                <p class="sub-caption">{{ block.settings.slider_sub_captions }}</p>
            </div>
            <div class="nav-buttons">
                <button class="prev" onclick="prevSlide()">&#10094;</button>
                <button class="next" onclick="nextSlide()">&#10095;</button>
            </div>
        {% endfor %}
    </div>
</div>

<style>
.custom-container {
    width: 100%;
    overflow: hidden;
    position: relative;
    display: flex;
    justify-content: center;
}

.custom-wrapper {
    display: flex;
    transition: transform 0.5s ease;
}

.custom-slider-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    text-align: center;
}

.main-item img {
    width: 100%;
    height: auto;
    border-radius: 8px;
}

.small-item {
    width: 30%;
    opacity: 0.7;
    transform: scale(0.8);
    transition: transform 0.3s ease, opacity 0.3s ease;
    margin: 0 15px;
}

.small-item img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 8px;
}

.slider-item:hover .small-item {
    opacity: 1;
    transform: scale(1);
}

.caption {
    font-size: 1.5rem;
    font-weight: bold;
    margin-top: 10px;
    color: #333;
}

.sub-caption {
    font-size: 1rem;
    margin-top: 5px;
    color: gray;
}

/* Adding styles for next/prev buttons */
.nav-buttons {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
    display: flex;
    justify-content: space-between;
    z-index: 10;
}

.nav-buttons .prev, .nav-buttons .next {
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    border: none;
    padding: 10px;
    cursor: pointer;
    border-radius: 50%;
}

.nav-buttons .prev:hover, .nav-buttons .next:hover {
    background-color: rgba(0, 0, 0, 0.7);
}
</style>

<script>
let currentIndex = 0;
const items = document.querySelectorAll('.custom-slider-item');
const totalItems = items.length;

function moveSlider() {
    const sliderWrapper = document.querySelector('.custom-wrapper');
    sliderWrapper.style.transform = `translateX(-${currentIndex * 100}%)`;
}

function nextSlide() {
    if (currentIndex < totalItems - 1) {
        currentIndex++;
    } else {
        currentIndex = 0;
    }
    moveSlider();
}

function prevSlide() {
    if (currentIndex > 0) {
        currentIndex--;
    } else {
        currentIndex = totalItems - 1;
    }
    moveSlider();
}

// Add automatic sliding
document.addEventListener('DOMContentLoaded', () => {
    setInterval(nextSlide, 3000); // Auto slide every 3 seconds
});
</script>

{% schema %}
{
  "name": "VB - Custom Slider",
  "settings": [],
  "blocks": [
    {
      "type": "block",
      "name": "Slider",
      "settings": [
        {
          "type": "image_picker",
          "label": "Select Image",
          "id": "image"
        },
        {
          "type": "text",
          "label": "Heading",
          "id": "slider_captions"
        },
        {
          "type": "text",
          "label": "Sub Heading",
          "id": "slider_sub_captions"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "VB - Custom Slider"
    }
  ]
}
{% endschema %}